/* common/nyz_area_picker/nyz_area_picker.wxss */
.nyz_area_view{
  width: 100%;
  position: fixed;
  bottom:-500rpx;
  left: 0px;
  background-color: #fff;
  z-index: 21;
  transition: 0.3s bottom;
}

.nyz_area_pick_view{
  height: 300rpx;
  width: 100%;
}

.nyz_area_colum_view{
  line-height: 35px;
  text-align: center;
  font-size: 28rpx;
}

.nyz_area_mask.hide{
  display: none;
}

.nyz_area_mask.show{
  display: block;
}

.nyz_area_view.show{
  bottom: 0;
}
.nyz_area_view.hide{
  bottom: -500rpx;
}

.nyz_area_view_btns{
  background-color: #fff;
  border-bottom: 1px solid #eeeeee;
  font-size: 30rpx;
  padding: 18rpx 0rpx;
}

.nyz_area_view_btns>text{
  display: inline-block;
  word-spacing: 4rpx;
  letter-spacing: 4rpx;
}

.nyz_area_view_btn_cancle{
  color: #939393;
  padding-right: 20rpx;
  padding-left: 25rpx;
}

.nyz_area_view_btn_sure{
  float: right;
  padding-left: 20rpx;
  padding-right: 25rpx;
  color:#00A980;
}
.nyz_area_view_back{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100vh;
  z-index:9;
  background-color:rgba(0,0,0,0.4);
}
.nyz_area_mask{
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0rpx;
  z-index: 20;
  background-color:rgba(0,0,0,0.4);
}